@theme "/usr/share/rofi/themes/Monokai.rasi"

configuration {
	modi: "drun,window,run,filebrowser";
	show-icons: true;
	display-drun: "Apps";
	display-run: "Run";
	display-filebrowser: "Files";
	display-window: "Windows";
	drun-display-format: "{name}";
	window-format: "{w} · {c} · {t}";
	hover-select: true;
	me-select-entry: "MouseSecondary";
	me-accpet-entry: "MousePrimary";
	kb-mode-next: "Tab";
	kb-accept-entry: "Return";
	kb-remove-to-eol: "";
	kb-element-next: "Control+j";
	kb-element-prev: "Control+k";
}

drun {
    ignore-hidden: true;
}

* {
	font: "FiraCode Nerd Font Mono 12";
}

window {
	enabled: true;
	border: 2px;
	border-color: rgb(255,221,51);
	width: 50%;
	background-color: rgba(24,24,24, 1);
}

mainbox {
	enabled: true;
	padding: 15px;
	orientation: vertical;
	children: [ "inputbar", "listbox"];
}

inputbar {
	enabled: true;
	padding: 10px 10px 100px 10px;
	margin: 10px;
	orientation: horizontal;
	children: ["entry", "mode-switcher"];
}

entry {
	expand: false;
	width: 20%;
	padding: 12px 10px 10px 10px;
	cursor: text;
	placeholder: " <b>Search</b> ";
	placeholder-markup: true;
	background-color: #453D41;
	text-color: white;
	text-transform: bold;
}

listbox {
	spacing: 20px;
	padding: 20px;
	children: ["message", "listview"];
}

listview {
	columns: 2;
	lines: 6;
	cycle: true;
	dynamic: true;
	scrollbar: false;
	layout: vertical;
	reverse: false;
	fixed-height: false;
	fixed-column: true;
	spacing: 10px;
	border: 0px;
}

dummy {
	expand: true;
}

mode-switcher {
	spacing: 10px;
	border: 0px;
}

button {
	width: 5%;
	padding: 12px;
	cursor: pointer;
	text-color: #969696;
	background-color: #2c2c2c;
}

button selected {
	text-color: white;
	background-color: #453D41;
}

element {
	spacing: 10px;
	padding: 10px;
	cursor: pointer;
}

element-icon {
	size: 36px;
}

element selected.normal {
	background-color: #453D41;
}

element-text {
	vertical-align: 0.5;
	horizontal-align: 0.0;
	text-color: #969696;
}

element-text selected {
	text-color: white;
}
